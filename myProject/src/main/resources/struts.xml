<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>

    <constant name="struts.devMode" value="true" />

    <package name="default" extends="struts-default, json-default">

        <action name="">                        <!--setting page to open on first hand-->
            <result>/index.jsp</result>
        </action>

        <action name="mainPage">
            <result>/WEB-INF/mainPage.jsp</result>
        </action>

        <action name="loginPage">
            <result>/index.jsp</result>
        </action>

        <action name="login" class="action.LoginAction" method="loginCheck">
            <result name="success" type="json"></result>
        </action>

        <action name="loadDiscoveryTable" class="action.TableAction" method="loadDiscoveryTable">
            <result name="success" type="json"></result>
        </action>

        <action name="deleteDiscoveryRow" class="action.TableAction" method="deleteDiscoveryRow">
            <result name="success" type="json"></result>
        </action>

        <action name="insertDiscoveryRow" class="action.DiscoveryAction" method="insertDiscoveryRow">
            <result name="success" type="json"></result>
        </action>

        <action name="getDiscoveryData" class="action.DiscoveryAction" method="getDiscoveryData">
            <result name="success" type="json"></result>
        </action>

        <action name="editDiscoveryDevice" class="action.DiscoveryAction" method="editDiscoveryDevice">
            <result name="success" type="json"></result>
        </action>






    </package>

</struts>


